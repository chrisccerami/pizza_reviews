<div>
<ul>
<% @comments.each do |comment| %>
  <div class = "comment"><li><%= comment.body %>
  <%= comment.review.pizzeria.name %>
  <%= comment.review.title %>
  <%= link_to("Delete comment", comment_path(comment), method: :delete, data: {confirm: "Are you sure?"}, class: "button alert round") %></li></div>
<% end %>
</ul>
</div>
