<h1><%= @review.title %></h1>

<h2><%= @review.pizzeria.name %></h2>
<h3><%= @review.pizzeria.street %><br/>
  	<%= @review.pizzeria.address %></h3>

<p><%= "#{@review.rating} stars" %></p>
<p><%= @review.body %></p>
<% if current_user == @review.user %>
  <p><%= link_to("Edit Review", edit_review_path(@review)) %></p>
  <p><%= link_to("Delete Review", review_path(@review), method: :delete, confirm: true) %></p>
<% end %>
<p><%= @review.updated_at %></p>
<p><%= @review.created_at %></p>
<p><%= @review.user.email %></p>
