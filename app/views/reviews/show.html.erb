<h1><% @review.title %></h1>

<h2><%= @pizzeria.name %></h2>
<h3><%= @pizzeria.street %><br/>
    <%= "#{@pizzeria.city}, #{@pizzeria.state} #{@pizzeria.zip_code}" %></h3>

<p><%= @review.rating %></p>
<p><%= @review.body %></p>
<p><%= @review.updated_at %></p>
<p><%= @review.created_at %></p>
<p><%= @review.user.email %></p>

<%= form_for [@review, @comment] do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body, "Comment" %>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit "Submit Comment" %>
  </div>
<% end %>
