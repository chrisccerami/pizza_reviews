<h1><% @review.title %></h1>
<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |msg| %>
  <div>
    <%= msg %>
  </div>
  <% end %>
<% end %>

<h2><%= @review.pizzeria.name %></h2>
<h3><%= @review.pizzeria.street %><br/>
    <%= "#{@review.pizzeria.city}, #{@review.pizzeria.state} #{@review.pizzeria.zip_code}" %></h3>

<p><%= @review.rating %></p>
<p><%= @review.body %></p>
<p><%= @review.updated_at %></p>
<p><%= @review.created_at %></p>
<p><%= @review.user.email %></p>

<%= form_for [@review, @comment] do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body, "Comment" %>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit "Submit Comment" %>
  </div>
<% end %>
